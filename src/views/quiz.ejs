<%- include("partials/header") %>

<main class="container py-4">

    <h1 class="text-center m-2"> <%= questionsList.title %> </h1>

<h2 class="small text-end"><%= questionsList.author.firstname %> <%= questionsList.author.lastname %> </h2>


  <h3>Th√®mes</h3>
  <% for (const tag of questionsList.tags){%>
  <ul class="mb-4 p-0">
    <li class="badge bg-primary"><%= tag.name %></li>
  </ul>
<%}%>


<h3>Questions</h3>

<% for (const question of questionsList.questions){%>

  <span class="badge bg-info"><%= question.level.name %></span>
  <p class="fw-bold mb-1"><%= question.description %></p>
  <div class="mb-3 ms-2">

    <% for (const proposition of question.propositions){%>
      <div>
        <input type="radio" id="#" name="#" value="#">
        <label for="#"><%= proposition.description %></label>
      </div>
    <%}%>
  </div>
  <p class="fst-italic text-secondary"><%= question.anecdote %> <%= question.wiki %></p>

<button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
<%}%>

</main>

<%- include("partials/footer") %>
